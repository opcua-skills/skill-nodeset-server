<?xml version="1.0" encoding="utf-8"?>

<ModelDesign
        xmlns:uax="http://opcfoundation.org/UA/2008/02/Types.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:OpcUa="http://opcfoundation.org/UA/"
        xmlns:SKILLS="http://opcfoundation.org/UA/Skills/"
        xmlns:EX_LIN_AXIS_GRIP="https://example.com/UA/Examples/LinearAxisWithGripper/"
        xmlns:DI="http://opcfoundation.org/UA/DI/"
        xmlns:MY_COMPANY="https://example.com/UA/MyCompany/"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        TargetNamespace="https://example.com/UA/MyCompany/"
        TargetXmlNamespace="https://example.com/UA/MyCompany/"
        TargetVersion="0.9.0"
        TargetPublicationDate="2020-06-24T00:00:00Z"
        xmlns="http://opcfoundation.org/UA/ModelDesign.xsd">

  <Namespaces>
    <Namespace Name="MyCompany" Prefix="MyCompany" XmlNamespace="https://example.com/UA/MyCompany/Types.xsd" XmlPrefix="MyCompany">https://example.com/UA/MyCompany/</Namespace>

    <Namespace Name="OpcUa" Version="1.03" PublicationDate="2013-12-02T00:00:00Z" Prefix="Opc.Ua" InternalPrefix="Opc.Ua.Server" XmlNamespace="http://opcfoundation.org/UA/2008/02/Types.xsd" XmlPrefix="OpcUa">http://opcfoundation.org/UA/</Namespace>
    <Namespace Name="OpcUaSkills" Prefix="Opc.Ua.Skills" XmlNamespace="http://opcfoundation.org/UA/Skills/Types.xsd" XmlPrefix="SKILLS" FilePath="../../deps/skill-nodeset/SkillsModel">http://opcfoundation.org/UA/Skills/</Namespace>
    <Namespace Name="ExampleLinearAxisWithGripper" Prefix="ExampleLinearAxisWithGripper" XmlNamespace="https://example.com/UA/Examples/LinearAxisWithGripper/Types.xsd" XmlPrefix="EX_LIN_AXIS_GRIP" FilePath="../../deps/skill-nodeset/exampleModel/LinearAxisWithGripperModel">https://example.com/UA/Examples/LinearAxisWithGripper/</Namespace>
    <Namespace Name="OpcUaDi" Prefix="Opc.Ua.Di" XmlNamespace="http://opcfoundation.org/UA/DI/Types.xsd" XmlPrefix="DI" FilePath="OpcUaDiModel">http://opcfoundation.org/UA/DI/</Namespace>
  </Namespaces>

  <ObjectType SymbolicName="MY_COMPANY:MyFancyAxisType" BaseType="DI:DeviceType" IsAbstract="false">
    <Description>Linear axis with gripper</Description>
  </ObjectType>
  <!-- Sommer automatic gripper Device -->
  <Object SymbolicName="MY_COMPANY:MyFancyAxis" TypeDefinition="MY_COMPANY:MyFancyAxisType" SupportsEvents="true">
    <Children>
      <Object SymbolicName="MY_COMPANY:Skills" TypeDefinition="OpcUa:BaseObjectType" ModellingRule="Mandatory">
        <Description>Contains the skills of the Device</Description>
        <Children>
          <Object SymbolicName="MY_COMPANY:GraspSkill" TypeDefinition="OpcUa:BaseObjectType" ModellingRule="Mandatory"  SupportsEvents="true">
            <Description>Close Gripper</Description>
            <References>
              <Reference IsInverse="false">
                <ReferenceType>OpcUa:HasInterface</ReferenceType>
                <TargetId>EX_LIN_AXIS_GRIP:IGraspSkillType</TargetId>
              </Reference>
            </References>
          </Object>
          <Object SymbolicName="MY_COMPANY:ReleaseSkill" TypeDefinition="OpcUa:BaseObjectType" ModellingRule="Mandatory"  SupportsEvents="true">
            <Description>Open Gripper</Description>
            <References>
              <Reference IsInverse="false">
                <ReferenceType>OpcUa:HasInterface</ReferenceType>
                <TargetId>EX_LIN_AXIS_GRIP:IReleaseSkillType</TargetId>
              </Reference>
            </References>
          </Object>
          <Object SymbolicName="MY_COMPANY:PickSkill" TypeDefinition="OpcUa:BaseObjectType" ModellingRule="Mandatory"  SupportsEvents="true">
            <Description>Move Axis and grasp object</Description>
            <References>
              <Reference IsInverse="false">
                <ReferenceType>OpcUa:HasInterface</ReferenceType>
                <TargetId>EX_LIN_AXIS_GRIP:IGraspSkillType</TargetId>
              </Reference>
              <Reference IsInverse="false">
                <ReferenceType>OpcUa:HasInterface</ReferenceType>
                <TargetId>EX_LIN_AXIS_GRIP:IMoveToAbsSkillType</TargetId>
              </Reference>
            </References>
          </Object>
          <Object SymbolicName="MY_COMPANY:PlaceSkill" TypeDefinition="OpcUa:BaseObjectType" ModellingRule="Mandatory"  SupportsEvents="true">
            <Description>Move Axis and release object</Description>
            <References>
              <Reference IsInverse="false">
                <ReferenceType>OpcUa:HasInterface</ReferenceType>
                <TargetId>EX_LIN_AXIS_GRIP:IReleaseSkillType</TargetId>
              </Reference>
              <Reference IsInverse="false">
                <ReferenceType>OpcUa:HasInterface</ReferenceType>
                <TargetId>EX_LIN_AXIS_GRIP:IMoveToAbsSkillType</TargetId>
              </Reference>
            </References>
          </Object>
        </Children>
      </Object>
    </Children>
    <References>
      <Reference IsInverse="true">
        <ReferenceType>OpcUa:Organizes</ReferenceType>
        <TargetId>DI:DeviceSet</TargetId>
      </Reference>
    </References>
  </Object>

  <!-- ### Variable Types ###-->

</ModelDesign>
